<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/tile_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/compleat_message" 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_margin="10dip"
        android:padding="10dip"
        android:background="@drawable/text_bg"
        android:textSize="22sp"
        android:gravity="center_vertical" />
    
    <Button
        android:background="@drawable/button_stateful" 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="10dip"
    	android:text="@string/ToMain"
    	android:textColor="@drawable/button_text_stateful"
    	android:drawableLeft="@drawable/ic_menu_home"
    	android:onClick="returnTopPage" />
    
    <include layout="@layout/footer"/>
</LinearLayout>